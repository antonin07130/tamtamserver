# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /sync                            controllers.HomeController.index

###### user related routes ######

# return a User from the database
GET     /users/:userId                            controllers.UserController.getUser(userId: String)

# insert a new User in the database
PUT     /users/:userId                            controllers.UserController.putUser(userId: String)

# remove a User from the database
DELETE     /users/:userId                         controllers.UserController.deleteUser(userId: String)

# get the list of Things a user is selling
GET /users/:userId/sellingThings                  controllers.ThingController.getSellingThings(userId : String)



###### Thing related routes ######

# returns all Things from database
GET     /things                                   controllers.ThingController.getThings

GET     /things/near/:lon/:lat                    controllers.ThingController.getThingsNear(lon: Double, lat: Double, maxDistance : Option[Double], num : Option[Int])

# returns a Thing from database
GET     /things/:thingId                          controllers.ThingController.getThing(thingId: String)

# insert a new Thing in the database
PUT     /things/:thingId                          controllers.ThingController.putThing(thingId: String)

# insert a new Thing in this user's showcase
PUT     /users/:userId/sellingThings/:thingId     controllers.ThingController.sellThing(userId: String, thingId: String)

# remove a Thing from this user's showcase
DELETE     /users/:userId/sellingThings/:thingId  controllers.ThingController.removeThing(userId: String, thingId: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                             controllers.Assets.versioned(path="/public", file: Asset)
