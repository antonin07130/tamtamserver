# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /sync                            controllers.HomeController.index

# returns the list of Users
GET     /sync/users                       controllers.UserController.getUsers

# returns a User
GET     /sync/users/:userId               controllers.UserController.getUser(userId: String)

# returns a Thing
GET     /sync/things/:thingId             controllers.ThingController.getThing(thingId: String)

# TODO store a thing instead of printing it
# print a Thing
PUT     /sync/things/:thingId             controllers.ThingController.putThing(thingId: String)





# TODO returns the list of Things
#GET     /things                     controllers.HomeController.getThings

# TODO store a Thing
#PUT     /things                     controllers.HomeController.putThing(thingId: String)

# TODO returns a list of Things near a latitude/longitude
GET     /things/near/:lat/:lon       controllers.HomeController.getThingsNear(lat: Double, lon : Double)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
