# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /sync                            controllers.HomeController.index

###### user related routes ######

# returns a User
GET     /users/:userId               controllers.UserController.getUser(userId: String)

# insert a new User in the database
PUT     /users/:userId               controllers.UserController.putUser(userId: String)


###### Thing related routes ######

# returns a Thing from database
GET     /things/:thingId             controllers.ThingController.getThing(thingId: String)

# insert a new Thing in the database
PUT     /sync/things/:thingId        controllers.ThingController.putThing(thingId: String)




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
